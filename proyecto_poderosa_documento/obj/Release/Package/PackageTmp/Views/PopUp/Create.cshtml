@model proyecto_poderosa_documento.Models.PopUp

@{
    ViewBag.Title = "Agrear PopUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pdfUploaded = ViewBag.PdfUploaded != null && (bool)ViewBag.PdfUploaded;
}

<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body class="d-flex flex-column h-100">
    <!-- Begin page content -->
    <main class="flex-shrink-0">
        <div class="container">
            <h3 class="my-3">Crear PopUp</h3>

            @using (Html.BeginForm("Create", "PopUp", FormMethod.Post, new { enctype = "multipart/form-data", id = "createPopUpForm" }))
            {
                @Html.AntiForgeryToken()

                <!-- Nombre del PopUp -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.NombrePopUp, "Nombre PopUp")
                    @Html.TextBoxFor(model => model.NombrePopUp, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NombrePopUp, "", new { @class = "text-danger" })
                </div>

                <!-- Imagen del PopUp -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Imagen, "Imagen")
                    <input type="file" name="Imagen" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
                </div>

                <!-- Documento del PopUp -->
                <div class="form-group mb-3">
                    @Html.Label("Documento (PDF)", htmlAttributes: new { @class = "control-label" })
                    <input type="file" id="DocumentoField" name="Documento" class="form-control" />
                </div>

                <!-- URL del PopUp -->
                <div class="form-group mb-3">
                    @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Url, new { @class = "form-control", id = "UrlField" })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>

                <!-- Botones -->
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <a href="@Url.Action("Dashboard", "Noticias")" class="btn btn-secondary">Cancelar</a>
                </div>
            }
        </div>
    </main>
    <script>
    document.getElementById("DocumentoField").addEventListener("change", function () {
        const file = this.files[0];
        if (file && file.name.toLowerCase().endsWith(".pdf")) {
            // Deshabilitar el campo Url
            document.getElementById("UrlField").value = "";
            document.getElementById("UrlField").setAttribute("disabled", "disabled");
        } else {
            // Habilitar el campo Url si no es un PDF
            document.getElementById("UrlField").removeAttribute("disabled");
        }
    });
    </script>
</body>
</html>
