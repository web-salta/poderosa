    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
@Html.Partial("~/Views/Shared/_head.cshtml")
<!-- METAS -->
<title>Gestión Ambiental | PODEROSA</title>
<!-- Basic HTML Meta Tags -->
<meta name='title' content='Inicio | PODEROSA' />
