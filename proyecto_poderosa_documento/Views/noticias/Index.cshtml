@model IEnumerable<proyecto_poderosa_documento.Models.Noticia>

@{
    ViewBag.Title = "Noticias";
}

<h2>Noticias</h2>

<div class="row">
    @foreach (var noticia in Model)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5>@noticia.Titulo</h5>
                    <small>@noticia.FechaPublicacion.ToString("dd 'de' MMMM 'de' yyyy")</small>
                </div>
                <div class="card-body">
                    <p>
                        @{
                            var contenido = noticia.Contenido;
                            var displayContent = contenido.Length > 150 ? contenido.Substring(0, 150) + "..." : contenido;
                        }
                        @displayContent
                    </p>
                    <a href="@Url.Action("Details", "Noticias", new { titulo = noticia.Titulo.Replace(" ", "-").ToLower() })" class="btn btn-primary">Leer más</a>
                </div>
            </div>
        </div>
    }
</div>