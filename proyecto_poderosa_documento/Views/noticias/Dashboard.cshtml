@model proyecto_poderosa_documento.Models.DashboardViewModel

@{
    ViewBag.Title = "Dashboard - Administrador";
}

<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="~/Content/css/estilo.css" rel="stylesheet">
</head>
<body class="d-flex h-100">
    <!-- Sidebar -->
    <div class="d-flex flex-column p-3 bg-light" style="width: 250px; height: 100vh;">
        <h4 class="mb-4">Menú</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="javascript:void(0);" onclick="showSection('noticias')">Noticias</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:void(0);" onclick="showSection('popup')">PopUp</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="flex-fill p-4">
        <!-- Noticias Section -->
        <div id="noticias-section" class="section">
            <h3 class="my-3" id="titulo">Dashboard - Noticias</h3>

            <a href="@Url.Action("Create", "Noticias")" class="btn btn-success">Agregar</a>

            <table class="table table-hover table-bordered my-3" aria-describedby="titulo">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Fecha de Publicación</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var noticia in Model.Noticias)
                    {
                        <tr>
                            <td>@noticia.Titulo</td>
                            <td>@noticia.FechaPublicacion.ToString("dd 'de' MMMM 'de' yyyy")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Noticias", new { titulo = noticia.Titulo.Replace(" ", "-").ToLower() })" class="btn btn-warning btn-sm me-2">Editar</a>
                                <a href="@Url.Action("Details", "Noticias", new { titulo = noticia.Titulo.Replace(" ", "-").ToLower() })" target="_blank" class="btn btn-info btn-sm me-2">Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PopUp Section -->
        <div id="popup-section" class="section" style="display: none;">
            <h3 class="my-3" id="titulo">PopUps</h3>

            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Create", "PopUp")" class="btn btn-success">Agregar PopUp</a>
            }

            <!-- Mostrar listado de PopUps -->
            <table class="table table-hover table-bordered my-3">
                <thead class="table-dark">
                <tr>
                    <th scope="col">Título</th>
                    <th scope="col">URL</th>
                    <th scope="col">Fecha de Creación</th>
                    <th scope="col">Opciones</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var popUp in Model.PopUps)
                {
                    <tr>
                        <td>@popUp.NombrePopUp</td>
                        <td>@popUp.Url</td>
                        <td>@popUp.FechaCreacion.ToString("dd/MM/yyyy")</td>
                        <td>
                            <!-- Ver PopUp -->
                            <a href="@Url.Action("Details", "PopUp", new { id = popUp.Id })" class="btn btn-info btn-sm">Ver</a>

                            @if (popUp.IsActive)
                            {
                                <!-- Si el popup está activo, se muestra el botón de desactivar -->
                                <form action="@Url.Action("Deactivate", "Noticias")" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@popUp.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm">Desactivar</button>
                                </form>
                            }
                            else
                            {
                                <!-- Si el popup está desactivado, mostrar mensaje -->
                                <span class="text-muted">Desactivado</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>

    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary">2024</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>

    <script>
        // Function to show the selected section
        function showSection(section) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(s => s.style.display = 'none');

            // Show the selected section
            document.getElementById(section + '-section').style.display = 'block';
        }

        const eliminaModal = document.getElementById('eliminaModal')
        if (eliminaModal) {
            eliminaModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget
                const id = button.getAttribute('data-bs-id')

                const form = eliminaModal.querySelector('form')
                form.querySelector('#noticiaId').value = id
            })
        }
    </script>
</body>
</html>
