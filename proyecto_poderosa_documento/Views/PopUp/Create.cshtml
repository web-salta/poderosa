@model proyecto_poderosa_documento.Models.PopUp

@{
    ViewBag.Title = "Crear PopUp";
}

<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>
<body class="d-flex flex-column h-100">
    <!-- Begin page content -->
    <main class="flex-shrink-0">
        <div class="container">
            <h3 class="my-3">Crear PopUp</h3>

            @using (Html.BeginForm("Create", "PopUp", FormMethod.Post, new { enctype = "multipart/form-data", id = "createPopUpForm" }))
            {
                @Html.AntiForgeryToken()

                <!-- Nombre del PopUp -->
                <div class="form-group">
                    @Html.LabelFor(model => model.NombrePopUp)
                    @Html.TextBoxFor(model => model.NombrePopUp, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.NombrePopUp, "", new { @class = "text-danger" })
                </div>

                <!-- URL del PopUp -->
                <div class="form-group">
                    @Html.LabelFor(model => model.Url)
                    @Html.TextBoxFor(model => model.Url, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                </div>

                <!-- Imagen del PopUp -->
                <div class="form-group">
                    @Html.LabelFor(model => model.Imagen, "Imagen")
                    <input type="file" name="Imagen" class="form-control" />
                    @Html.ValidationMessageFor(model => model.Imagen, "", new { @class = "text-danger" })
                </div>

                <!-- Botones -->
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Guardar</button>
                    <a href="@Url.Action("Dashboard", "Noticias")" class="btn btn-secondary">Cancelar</a>
                </div>
            }
        </div>
    </main>

    <footer class="footer mt-auto py-3 bg-body-tertiary">
        <div class="container">
            <span class="text-body-secondary">2024 | Cdigos de Programación</span>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
