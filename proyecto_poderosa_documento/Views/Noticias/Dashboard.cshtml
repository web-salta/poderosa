@model proyecto_poderosa_documento.Models.DashboardViewModel
@{
    ViewBag.Title = "Dashboard - Poderosa";
}
<!DOCTYPE html>
<html lang="es" class="h-100">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Estilo general del menú */
        .sidebar {
            height: 100vh;
            background: linear-gradient(180deg, #1e1e2f, #2a2a40); /* Degradado moderno */
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            padding: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.5); /* Sombra para dar profundidad */
            transition: transform 0.3s ease-in-out; /* Transición para mostrar/ocultar */
        }

            .sidebar.hidden {
                transform: translateX(-100%); /* Ocultar el menú */
            }

            .sidebar h4 {
                font-size: 1.5rem;
                font-weight: bold;
                margin-bottom: 1.5rem;
                color: #f0db4f; /* Amarillo vibrante */
                text-align: center;
            }

            /* Opciones del menú */
            .sidebar .nav-link {
                color: #cfcfcf;
                font-size: 1.1rem;
                margin-bottom: 0.5rem;
                padding: 12px 15px;
                border-radius: 8px;
                display: flex;
                align-items: center;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background-color: #f0db4f; /* Resaltado amarillo */
                    color: #1e1e2f; /* Texto oscuro */
                    transform: scale(1.05); /* Efecto de zoom */
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Sombra al pasar el cursor */
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                    font-size: 1.2rem;
                }

        /* Cierre de sesión */
        .menu-footer {
            position: absolute;
            bottom: 15px;
            width: 85%;
        }

            .menu-footer .nav-link {
                color: #ff4d4d; /* Rojo para destacar */
                font-weight: bold;
                padding: 12px 15px;
                border-radius: 8px;
                display: flex;
                align-items: center;
                transition: background-color 0.3s ease, color 0.3s ease; /* Solo transición de color y fondo */
            }

                .menu-footer .nav-link:hover {
                    background-color: #ff6666; /* Color al pasar el puntero */
                    color: #fff;
                }

        /* Contenido principal */
        .main-content {
            transition: margin-left 0.3s ease-in-out; /* Transición suave */
            margin-left: 0; /* Por defecto, sin margen */
            margin-top: 20px; /* Evita que el título choque con el botón */
        }

            .main-content.shifted {
                margin-left: 250px; /* Desplazar el contenido cuando el menú esté visible */
            }

        /* Estilo base del botón */
        #menuToggleBtn {
            background-color: #ffffff;
            color: #000;
            border: none;
        }

            /* Cuando el menú está oculto */
            #menuToggleBtn.menu-hidden {
                background-color: #1e1e2f; /* Azul oscuro del menú */
                color: #fff;
            }
    </style>
</head>
<body class="d-flex h-100">
    <!-- Botón siempre visible para mostrar/ocultar menú -->
        <button id="menuToggleBtn" onclick="toggleMenu()" class="btn btn-outline-light btn-sm rounded-circle"
                style="position: fixed; top: 20px; left: 20px; z-index: 1050; width: 40px; height: 40px;">
            <span id="menuIcon">☰</span>
        </button>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebarMenu">
        <h4>Menu</h4>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link" href="javascript:void(0);" onclick="showSection('noticias')">
                    <i class="bi bi-newspaper"></i> Noticias
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="javascript:void(0);" onclick="showSection('popup')">
                    <i class="bi bi-window"></i> PopUp
                </a>
            </li>
        </ul>
        <!-- Cierre de sesión al final del menú -->
        <div class="menu-footer">
            @using (Html.BeginForm("LogOut", "Account", FormMethod.Post, new { id = "logoutForm" }))
            {
                @Html.AntiForgeryToken()
                <a href="javascript:void(0);" onclick="document.getElementById('logoutForm').submit();" class="nav-link">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            }
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content shifted flex-fill p-4" id="mainContent">
        <!-- Noticias Section -->
        <div id="noticias-section" class="section">
            <h3 class="my-3" id="titulo">Dashboard - Noticias</h3>

            <a href="@Url.Action("Create", "Noticias")" class="btn btn-success">Agregar Noticias</a>

            <table class="table table-hover table-bordered my-3" aria-describedby="titulo">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">Fecha de Publicación</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var noticia in Model.Noticias)
                    {
                        <tr>
                            <td>@noticia.Titulo</td>
                            <td>@noticia.FechaPublicacion.ToString("dd 'de' MMMM 'de' yyyy")</td>
                            <td>
                                <a href="@Url.Action("Edit", "Noticias", new { slug = noticia.Slug })" class="btn btn-warning btn-sm me-2">Editar</a>
                                <a href="@Url.Action("Details", "Noticias", new { slug = noticia.Slug })" target="_blank" class="btn btn-info btn-sm me-2">Ver</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- PopUp Section -->
        <div id="popup-section" class="section" style="display: none;">
            <h3 class="my-3" id="titulo">PopUps</h3>

            @if (User.Identity.IsAuthenticated)
            {
                <a href="@Url.Action("Create", "PopUp")" class="btn btn-success">Agregar PopUp</a>
            }

            <!-- Mostrar listado de PopUps -->
            <table class="table table-hover table-bordered my-3">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Título</th>
                        <th scope="col">URL</th>
                        <th scope="col">Fecha de Creación</th>
                        <th scope="col">Opciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var popUp in Model.PopUps)
                    {
                        <tr>
                            <td>@popUp.NombrePopUp</td>
                            <td>@popUp.Url</td>
                            <td>@popUp.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a href="@Url.Action("Index", "Home")" class="btn btn-info btn-sm">Ver</a>

                                @if (popUp.IsActive)
                                {
                                    <form action="@Url.Action("Deactivate", "PopUp")" method="post" style="display:inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@popUp.Id" />
                                        <button type="submit" class="btn btn-warning btn-sm">Desactivar</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Desactivado</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Function to show the selected section
        function showSection(section) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(s => s.style.display = 'none');

            // Show the selected section
            document.getElementById(section + '-section').style.display = 'block';
        }

        const eliminaModal = document.getElementById('eliminaModal')
        if (eliminaModal) {
            eliminaModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget
                const id = button.getAttribute('data-bs-id')

                const form = eliminaModal.querySelector('form')
                form.querySelector('#noticiaId').value = id
            })
        }

        // Mostrar/Ocultar el menú lateral
        const sidebarMenu = document.getElementById('sidebarMenu');
        const mainContent = document.getElementById('mainContent');

        function toggleMenu() {
            const isHidden = sidebarMenu.classList.toggle('hidden');
            mainContent.classList.toggle('shifted', !isHidden);

            const icon = document.getElementById('menuIcon');
            icon.textContent = isHidden ? '☰' : '✕';

            const toggleBtn = document.getElementById('menuToggleBtn');
            toggleBtn.classList.toggle('menu-hidden', isHidden);
        }



        // Function to show the selected section
        function showSection(section) {
            // Hide all sections
            const sections = document.querySelectorAll('.section');
            sections.forEach(s => s.style.display = 'none');

            // Show the selected section
            document.getElementById(section + '-section').style.display = 'block';
        }
    </script>
</body>
</html>
